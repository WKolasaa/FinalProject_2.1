<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="nl.inholland.finalproject.LoginController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <Label text="Login" />

    <TextField fx:id="usernameField" promptText="Username" />

    <PasswordField fx:id="passwordField" promptText="Password" />

    <Button fx:id="submitButton" text="Submit" onAction="#handleSubmit" />

    <Label fx:id="messageLabel" />
    <Label text="${passwordField.text}"/>
</VBox>
